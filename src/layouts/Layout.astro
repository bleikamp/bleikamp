---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/base.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title : "Ben Bleikamp"}</title>
  </head>
  <body class="p-12">
    <div class="max-w-xl mx-auto">
      <header class="mb-6">
        <h1
          class="font-bold text-xl mb-12 text-sm leading-5"
        >
          Ben Bleikamp
        </h1>
      </header>
      <div class="">
        <main>
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
